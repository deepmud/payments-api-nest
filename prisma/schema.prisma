generator client {
  //provider = "prisma-client"
  provider = "prisma-client-js"
 // output   = "../src/generated"  // relative to prisma/
  //engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

model Payment {
  id              String        @id @default(uuid())
  provider        String
  providerEventId String
  reference       String
  amount          Int
  currency        String
  status          PaymentStatus
  rawPayload      Json?
  createdAt       DateTime      @default(now())
  

  @@unique([provider, providerEventId])
  @@index([reference])
}
